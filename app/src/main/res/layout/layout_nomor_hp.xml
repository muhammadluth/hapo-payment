<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pick"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic__dwn_contacts" />

        <TextView
            android:id="@+id/tvnama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/pick"
            android:layout_toRightOf="@id/pick"
            android:fontFamily="@font/nunito_bold"
            android:text="Nomor hp :"
            android:textColor="@color/text_abuabu"
            android:textSize="@dimen/titleForm"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvnama"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/clear_number"
            android:layout_toLeftOf="@+id/clear_number"
            android:layout_toEndOf="@+id/pick"
            android:layout_toRightOf="@+id/pick"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nomorHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/nunito_bold"
                android:hint="@string/hint_nohp"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/textInputDefault"
                android:textStyle="bold"
                tools:ignore="UnusedAttribute" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="@color/hint" />
        </LinearLayout>


        <ImageView
            android:id="@+id/clear_number"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tvnama"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_white_24dp"
            android:visibility="gone"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

</LinearLayout>